<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thoughtWorks.dao.TrainModuleDao">
    <select id="queryUserRoleTotalCount" resultType="long">
        SELECT count(1)
        FROM t_train_module
    </select>

    <select id="queryUserRoleList" resultType="CourseModule">
        SELECT *
        FROM t_train_module
        LIMIT #{start}, #{end}
    </select>
    <insert id="insert" parameterType="CourseModule">
        INSERT INTO t_train_module (code, name) VALUES (#{code}, #{name})
    </insert>

    <update id="update" parameterType="CourseModule">
        UPDATE t_train_module
        SET code = #{code}, name = #{name}
        WHERE id = #{id}
    </update>
    <delete id="delete" parameterType="string">
        DELETE FROM t_train_module
        WHERE id = #{id}
    </delete>
</mapper>